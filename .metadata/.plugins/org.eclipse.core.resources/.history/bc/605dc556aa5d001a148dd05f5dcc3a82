package MangMayTinh;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Lab1();
	}
	public static void Lab1() {
		// Bai 1. Nh·∫≠p hÔøΩ? v√† t√™n
				Scanner scanner = new Scanner(System.in);
				System.out.println("Nhap h·ª? v√† t√™n:");
				String hoTen = scanner.nextLine();
				System.out.println("Nhap ƒëi·ªÉm Tb:");
				int diemTB = scanner.nextInt();
				System.out.printf("%s %d ƒëi·ªÉm\n",hoTen,diemTB);
//				
				// b√†i 2. H√¨nh ch·ªØ nh·∫≠t
				System.out.println("Nhap chi·ª?u d√†i:");
				int dai = scanner.nextInt();
				System.out.println("Nhap chi·ª?u r·ªông:");
				int rong = scanner.nextInt();
				int chuVi = (dai + rong) * 2;
				System.out.printf("Chu vi h√¨nh ch·ªØ nh·∫≠t: %d\n",chuVi);
				int dienTich = dai * rong;
				System.out.printf("Di·ªán t√≠ch h√¨nh ch·ªØ nh·∫≠t: %d\n",dienTich);
				System.out.printf("C·∫°nh nh·ª? nh·∫•t h√¨nh ch·ªØ nh·∫≠t: %d\n",Math.min(dai, rong));
				
				//b√†i 3. H√¨nh L·∫≠p Ph∆∞∆°ng
				System.out.println("Nh·∫≠p c·∫°nh h√¨nh l·∫≠p ph∆∞∆°ng:");
				int canh = scanner.nextInt();
				System.out.printf("Th·ªÉ t√≠ch h√¨nh l·∫≠p ph∆∞∆°ng:" +Math.pow(canh, 3));

				//bai 4. 
				System.out.println("\nNh·∫≠p c√°c h·ªá s·ªë ph∆∞ng tr√¨nh b·∫≠c 2 l·∫ßn l∆∞·ª£t:");
				int a = scanner.nextInt();
				int b = scanner.nextInt();
				int c = scanner.nextInt();
				double delta = Math.pow(b, 2) * 4 *a *c;
				System.out.print(Math.sqrt(delta));
		}
